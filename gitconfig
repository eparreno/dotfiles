[core]
  excludesfile = ~/.gitignore
	autocrlf = input
  safecrlf = false
  editor = vim
  quotepath = false
  whitespace = trailing-space,space-before-tab
[color]
  ui = auto
[format]
  ; pretty = "%C(yellow)%h%Creset %Cgreen[%ai]%Creset [%an] %s"
[user]
	name = Emili Parreno
	email = emili@eparreno.com
[github]
  user = eparreno
[branch]
  autosetupmerge = true
[push]
  default = current
[pull]
	rebase = true
[rebase]
  autosquash = true
[grep]
  extendRegexp = true
  lineNumber = true
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  conflicts = diff --name-only --diff-filter=UDX
  atpc = !sh -c \"git co -q develop && git branch --merged | grep -v \\\"\\*\\\" | xargs git branch -d\"
  pf = push --force-with-lease
[diff]
  noprefix = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[fetch]
	prune = true
